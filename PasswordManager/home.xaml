                        </RelativePanel>
                        <TextBlock Text="{Binding Title, Mode = OneWay}" VerticalAlignment="Center" Foreground="Black" Padding="10, 0, 0, 0"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
